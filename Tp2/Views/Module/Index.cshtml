@model IEnumerable<Tp2.Models.Module>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MassH)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.codeF)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MassH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codeF)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.codeM" class="btn btn-outline-info">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.codeM" class="btn btn-outline-secondary">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.codeM" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
